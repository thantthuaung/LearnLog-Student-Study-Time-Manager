<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNav">
        <item name="android:background">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="BottomNav.WhitePill">
        <item name="android:background">@drawable/bg_bottom_nav_cyan</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:radius">28dp</item>
    </style>

    <style name="Widget.LearnLog.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:background">@drawable/bottom_nav_pill_background</item>
        <item name="itemRippleColor">@color/ripple_white</item>
    </style>

    <style name="Widget.LearnLog.TasksHeader" parent="android:Widget.TextView">
        <item name="android:background">@drawable/rounded_capsule_header</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelLarge</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Filter Chip Style - Light gray with dark text, blue when selected -->
    <style name="Widget.LearnLog.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_filter_background</item>
        <item name="android:textColor">@color/chip_filter_text</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipIconTint">@color/chip_filter_text</item>
        <item name="rippleColor">@color/ripple_white</item>
    </style>

    <!-- Subject/Status Chip Style - Blue background with white text -->
    <style name="Widget.LearnLog.Chip.Assist" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/nav_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="rippleColor">@color/ripple_white</item>
    </style>

</resources>
