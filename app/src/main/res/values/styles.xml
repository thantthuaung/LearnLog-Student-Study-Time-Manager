<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNav">
        <item name="android:background">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <!-- Add more style items as needed -->
    </style>
    <style name="BottomNav.WhitePill">
        <item name="android:background">@drawable/bg_bottom_nav_cyan</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:radius">28dp</item>
    </style>
    <style name="Widget.LearnLog.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_tint</item>
        <item name="itemTextColor">@color/bottom_nav_item_tint</item>
        <item name="android:background">@drawable/bottom_nav_background</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>

    <style name="Widget.LearnLog.TasksHeader" parent="android:Widget.TextView">
        <item name="android:background">@drawable/rounded_capsule_header</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelLarge</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>
