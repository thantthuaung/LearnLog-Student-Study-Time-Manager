<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- Premium Component Styles - LearnLog 2.0                     -->
    <!-- ═══════════════════════════════════════════════════════════ -->

    <!-- Header Capsule - Blue pill with white text -->
    <style name="Widget.LearnLog.Header.Capsule" parent="android:Widget.TextView">
        <item name="android:background">@drawable/rounded_capsule_header</item>
        <item name="android:paddingLeft">@dimen/capsule_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/capsule_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/capsule_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/capsule_padding_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.LearnLog.TitleMedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Search Field - Full-width pill with subtle shadow -->
    <style name="Widget.LearnLog.SearchField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorSurfaceContainer</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_lg</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_lg</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_lg</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_lg</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:elevation">@dimen/elevation_subtle</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>

    <!-- Primary Button - Large pill with primary color -->
    <style name="Widget.LearnLog.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/radius_lg</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/TextAppearance.LearnLog.LabelLarge</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Outline Button - Ghost style with primary border -->
    <style name="Widget.LearnLog.Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/radius_lg</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/TextAppearance.LearnLog.LabelLarge</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Text Button - No background, primary text -->
    <style name="Widget.LearnLog.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/TextAppearance.LearnLog.LabelLarge</item>
        <item name="rippleColor">@color/ripple_white</item>
    </style>

    <!-- Floating Bottom Nav - Pill shape -->
    <style name="Widget.LearnLog.BottomNav.Container">
        <item name="android:layout_marginStart">@dimen/bottom_nav_inset_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/bottom_nav_inset_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/bottom_nav_inset_bottom</item>
        <item name="android:elevation">@dimen/elevation_nav</item>
    </style>

    <!-- Circle Avatar -->
    <style name="Widget.LearnLog.Avatar.Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Drawer Item Style -->
    <style name="Widget.LearnLog.Drawer.Item">
        <item name="android:minHeight">@dimen/drawer_item_height</item>
        <item name="android:paddingStart">@dimen/page_gutter</item>
        <item name="android:paddingEnd">@dimen/page_gutter</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- Backward Compatibility Aliases                              -->
    <!-- ═══════════════════════════════════════════════════════════ -->

    <!-- Legacy style aliases for backward compatibility -->
    <style name="CircleImageView" parent="Widget.LearnLog.Avatar.Circle"/>
    <style name="Widget.LearnLog.TasksHeader" parent="Widget.LearnLog.Header.Capsule"/>
    <style name="Widget.LearnLog.Avatar" parent="Widget.LearnLog.Avatar.Circle"/>
    <style name="Widget.LearnLog.Drawer" parent="Widget.LearnLog.Drawer.Item"/>

    <!-- Old chip style names for backward compatibility -->
    <style name="Widget.LearnLog.Chip" parent="Widget.LearnLog.Chip.Filter"/>
    <style name="Widget.LearnLog.Chip.Subject" parent="Widget.LearnLog.Chip.Assist"/>

    <!-- Old bottom nav style for backward compatibility -->
    <style name="BottomNavigationStyle" parent="Widget.LearnLog.BottomNav"/>

    <style name="BottomNav">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/spacing_xs</item>
        <item name="android:layout_margin">@dimen/spacing_xs</item>
    </style>

    <style name="BottomNav.WhitePill" parent="BottomNav">
        <item name="android:background">@drawable/bg_bottom_nav_cyan</item>
    </style>

</resources>
