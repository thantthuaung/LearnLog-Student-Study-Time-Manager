<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- Premium Material3 Light Theme - LearnLog 2.0                -->
    <!-- ═══════════════════════════════════════════════════════════ -->

    <style name="Theme.LearnLog" parent="Theme.Material3.Light.NoActionBar">
        <!-- Disable dynamic color (Android 12+ wallpaper tones) -->
        <item name="dynamicColorThemeOverlay">@null</item>

        <!-- Primary brand color - Sky Blue #38A3F1 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimary</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/chip_background_light</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>

        <!-- Surface colors - Clean & Bright -->
        <item name="colorSurface">@color/colorSurfaceContainer</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSurfaceVariant">@color/colorSurface</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="colorSurfaceContainer">@color/colorSurfaceContainer</item>
        <item name="colorSurfaceContainerLow">@color/colorSurfaceContainer</item>
        <item name="colorSurfaceContainerHigh">@color/colorSurfaceContainer</item>

        <!-- Outline -->
        <item name="colorOutline">@color/colorOutline</item>
        <item name="colorOutlineVariant">@color/colorOutline</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/colorSurface</item>

        <!-- Disable elevation overlays to keep surfaces pure white -->
        <item name="elevationOverlayEnabled">false</item>

        <!-- System bar colors: transparent for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowBackground">@color/colorSurface</item>

        <!-- Force light mode - disable auto dark mode -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Remove ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Typography Overrides - Premium Text Styles -->
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.LearnLog.DisplaySmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.LearnLog.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.LearnLog.TitleMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.LearnLog.BodyLarge</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.LearnLog.LabelLarge</item>

        <!-- Custom component styles -->
        <item name="bottomNavigationStyle">@style/Widget.LearnLog.BottomNav</item>
        <item name="materialCardViewStyle">@style/Widget.LearnLog.Card</item>
        <item name="chipStyle">@style/Widget.LearnLog.Chip.Filter</item>
        <item name="chipStandaloneStyle">@style/Widget.LearnLog.Chip.Assist</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- Typography Styles                                           -->
    <!-- ═══════════════════════════════════════════════════════════ -->

    <style name="TextAppearance.LearnLog.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">34sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.LearnLog.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.LearnLog.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.LearnLog.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight">22sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.LearnLog.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- Component Styles                                            -->
    <!-- ═══════════════════════════════════════════════════════════ -->

    <!-- Floating Bottom Nav - Pill Shape with Primary Blue Background -->
    <style name="Widget.LearnLog.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@drawable/bottom_nav_pill_background</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="elevation">@dimen/elevation_nav</item>
        <item name="itemRippleColor">@color/ripple_white</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Premium Card Style - White background, rounded corners, soft shadow -->
    <style name="Widget.LearnLog.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">@dimen/elevation_card</item>
        <item name="cardCornerRadius">@dimen/radius_lg</item>
        <item name="cardBackgroundColor">@color/colorSurfaceContainer</item>
        <item name="strokeWidth">0dp</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <!-- Filter Chip Style - Light container, outline when unselected -->
    <style name="Widget.LearnLog.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_filter_background</item>
        <item name="android:textColor">@color/chip_filter_text</item>
        <item name="chipStrokeColor">@color/colorOutline</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">@dimen/radius_lg</item>
        <item name="chipMinHeight">@dimen/touch_target_min</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipIconTint">@color/chip_filter_text</item>
        <item name="rippleColor">@color/ripple_white</item>
        <item name="android:textAppearance">@style/TextAppearance.LearnLog.LabelLarge</item>
    </style>

    <!-- Assist Chip Style - Primary blue background with white text -->
    <style name="Widget.LearnLog.Chip.Assist" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">@dimen/radius_lg</item>
        <item name="chipMinHeight">@dimen/touch_target_min</item>
        <item name="rippleColor">@color/ripple_white</item>
        <item name="android:textAppearance">@style/TextAppearance.LearnLog.LabelLarge</item>
    </style>

    <!-- Chart Title Style -->
    <style name="ChartTitleStyle" parent="TextAppearance.LearnLog.TitleMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/spacing_xs</item>
    </style>
</resources>
