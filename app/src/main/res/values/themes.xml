<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.LearnLog" parent="Theme.Material3.Light.NoActionBar">
        <!-- Disable dynamic color (Android 12+ wallpaper tones) -->
        <item name="dynamicColorThemeOverlay">@null</item>

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/nav_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/light_blue_background</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/sky_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/light_blue_background</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        <item name="colorSurfaceContainer">@color/white</item>
        <item name="colorSurfaceContainerLow">@color/white</item>
        <item name="colorSurfaceContainerHigh">@color/white</item>

        <!-- Outline -->
        <item name="colorOutline">@color/outline</item>
        <item name="colorOutlineVariant">@color/chip_stroke</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/screen_bg</item>

        <!-- Disable elevation overlays to prevent gray surfaces on devices -->
        <item name="elevationOverlayEnabled">false</item>

        <!-- System bar colors: transparent for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/screen_bg</item>

        <!-- Prevent Android from auto-darkening -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Remove ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Custom component styles -->
        <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>
        <item name="materialCardViewStyle">@style/Widget.LearnLog.Card</item>
        <item name="chipStyle">@style/Widget.LearnLog.Chip</item>
        <item name="chipStandaloneStyle">@style/Widget.LearnLog.Chip.Subject</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="elevation">8dp</item>
        <item name="itemRippleColor">@color/ripple_white</item>
    </style>

    <!-- Material Card Style - White background, no tonal surface -->
    <style name="Widget.LearnLog.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Filter Chip Style - Light gray with dark text, blue when selected -->
    <style name="Widget.LearnLog.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_filter_background</item>
        <item name="android:textColor">@color/chip_filter_text</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipIconTint">@color/chip_filter_text</item>
        <item name="rippleColor">@color/ripple_white</item>
    </style>

    <!-- Subject/Status Chip Style - Blue background with white text -->
    <style name="Widget.LearnLog.Chip.Subject" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/nav_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="rippleColor">@color/ripple_white</item>
    </style>

    <style name="ChartTitleStyle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>
