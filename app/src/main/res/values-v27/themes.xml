<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme for API 27+ that includes windowLightNavigationBar -->
    <style name="Theme.LearnLog" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/sky_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- System bar colors: transparent for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowBackground">@color/screen_bg</item>

        <!-- Remove ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Custom styles -->
        <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>
        <item name="materialCardViewStyle">@style/CardViewStyle</item>
    </style>
</resources>

