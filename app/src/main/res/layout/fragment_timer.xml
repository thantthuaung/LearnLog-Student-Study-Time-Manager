<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Countdown Progress Circle -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressCircle"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        app:indicatorSize="220dp"
        app:indicatorInset="0dp"
        app:trackThickness="12dp"
        app:indicatorColor="@color/primaryColor"
        app:trackColor="@color/secondaryColor" />

    <!-- Countdown Timer Text -->
    <TextView
        android:id="@+id/textCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25:00"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/progressCircle"
        app:layout_constraintBottom_toBottomOf="@id/progressCircle"
        app:layout_constraintStart_toStartOf="@id/progressCircle"
        app:layout_constraintEnd_toEndOf="@id/progressCircle" />

    <!-- Session Label/Type -->
    <TextView
        android:id="@+id/textSessionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Focus: Math Revision"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/progressCircle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Pick Session Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPickSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Session/Label"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintTop_toBottomOf="@id/textSessionLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Start/Pause/Reset Buttons -->
    <LinearLayout
        android:id="@+id/layoutTimerControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/btnPickSession"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartPause"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="168dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_button"
            android:text="Start"
            android:textSize="20sp"
            app:icon="@drawable/ic_play_arrow"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReset"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="61dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/rounded_button"
            android:text="Reset"
            app:icon="@drawable/ic_refresh"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />
    </LinearLayout>

    <!-- Quick Presets & Settings -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupPresets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutTimerControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintTop_toBottomOf="@id/chipGroupPresets"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Streak & Stats -->
    <TextView
        android:id="@+id/textStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Streak: 0 days"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btnSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textSessionsCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sessions Completed: 0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textStreak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Motivational Prompt -->
    <TextView
        android:id="@+id/textPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to focus?"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/textSessionsCompleted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
