<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Focus Duration -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Focus Duration (minutes)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/focusDurationInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="25" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Short Break Duration -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Short Break Duration (minutes)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/shortBreakDurationInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="5" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Long Break Duration -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Long Break Duration (minutes)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/longBreakDurationInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="15" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Long Break Interval -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Sessions before long break">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/longBreakIntervalInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="4" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Auto-start options -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/autoStartBreaksSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:checked="true"
            android:text="Auto-start breaks" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/autoStartPomodorosSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Auto-start focus sessions" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/soundEffectsSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="true"
            android:text="Enable sound effects" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/vibrationSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="true"
            android:text="Enable vibration" />

        <!-- Quick presets -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Quick Presets"
            android:textStyle="bold" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/presetsChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/preset25_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25/5" />

            <com.google.android.material.chip.Chip
                android:id="@+id/preset45_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45/10" />

            <com.google.android.material.chip.Chip
                android:id="@+id/preset60_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60/15" />
        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>
</ScrollView>
