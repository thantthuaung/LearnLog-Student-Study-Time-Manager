<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:id="@+id/cardTask"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="20dp"
    android:background="@color/white"
    app:layout_constraintWidth_percent="0.90"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- First line: Title + subject tag -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/textTaskTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/ink"
                tools:text="@string/placeholder_task_title" />
            <TextView
                android:id="@+id/textTaskSubject"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/status_background"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                tools:text="@string/placeholder_subject"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Second line: Due date + priority dot + checkbox -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_notes"
                app:tint="@color/nav_blue"
                android:contentDescription="Due date" />
            <TextView
                android:id="@+id/textTaskDue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/placeholder_due_date"
                android:textColor="@color/ink"
                android:textSize="14sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp" />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_timer"
                app:tint="@color/nav_blue"
                android:contentDescription="Duration"
                android:layout_marginEnd="4dp" />
            <TextView
                android:id="@+id/textTaskDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="30 min"
                android:textColor="@color/ink"
                android:textSize="14sp"
                android:layout_marginEnd="12dp" />
            <View
                android:id="@+id/priorityDot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/high_priority"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="0dp"
                android:layout_gravity="center_vertical" />
            <CheckBox
                android:id="@+id/checkComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:contentDescription="Mark task complete"
                android:layout_marginStart="0dp"
                android:minWidth="44dp"
                android:minHeight="44dp" />
        </LinearLayout>

        <!-- Task Status -->
        <TextView
            android:id="@+id/textTaskStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/status_pending"
            android:textColor="@color/ink"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <!-- Thin progress line (time-to-due indicator) -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:progress="50"
            android:progressTint="@color/sky_blue"
            android:backgroundTint="@color/light_gray"
            android:layout_marginTop="8dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <Button
                android:id="@+id/btnStartTimerTask"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/start_timer"
                android:contentDescription="Start timer for this task"
                android:minHeight="48dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginEnd="8dp" />
            <Button
                android:id="@+id/btnEditTask"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_edit"
                android:contentDescription="Edit task"
                android:minHeight="48dp"
                style="@style/Widget.Material3.Button.TextButton" />
        </LinearLayout>

        <!-- Optional progress bar (tiny, 4dp height) -->
        <ProgressBar
            android:id="@+id/progressTask"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="50" />

        <!-- Behavior hooks: swipe right to complete, swipe left to delete (see ItemTouchHelper in adapter code) -->
    </LinearLayout>
</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

