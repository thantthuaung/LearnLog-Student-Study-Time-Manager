<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Force light theme even in night mode - Premium Design -->
    <style name="Theme.LearnLog" parent="Theme.Material3.Light.NoActionBar">
        <!-- Disable dynamic color -->
        <item name="dynamicColorThemeOverlay">@null</item>

        <!-- Primary brand color - Sky Blue #38A3F1 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimary</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/chip_background_light</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/colorSurfaceContainer</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSurfaceVariant">@color/colorSurface</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="colorSurfaceContainer">@color/colorSurfaceContainer</item>
        <item name="colorSurfaceContainerLow">@color/colorSurfaceContainer</item>
        <item name="colorSurfaceContainerHigh">@color/colorSurfaceContainer</item>

        <!-- Outline -->
        <item name="colorOutline">@color/colorOutline</item>
        <item name="colorOutlineVariant">@color/colorOutline</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/colorSurface</item>

        <!-- Disable elevation overlays -->
        <item name="elevationOverlayEnabled">false</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowBackground">@color/colorSurface</item>

        <!-- Force light mode -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Remove ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Typography -->
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.LearnLog.DisplaySmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.LearnLog.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.LearnLog.TitleMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.LearnLog.BodyLarge</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.LearnLog.LabelLarge</item>

        <!-- Custom styles -->
        <item name="bottomNavigationStyle">@style/Widget.LearnLog.BottomNav</item>
        <item name="materialCardViewStyle">@style/Widget.LearnLog.Card</item>
        <item name="chipStyle">@style/Widget.LearnLog.Chip.Filter</item>
        <item name="chipStandaloneStyle">@style/Widget.LearnLog.Chip.Assist</item>
    </style>
</resources>

