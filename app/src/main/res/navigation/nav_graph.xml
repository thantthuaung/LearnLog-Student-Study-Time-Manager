<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Auth Fragments -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.learnlog.ui.auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_tasksFragment"
            app:destination="@id/tasksFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.learnlog.ui.auth.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/action_registerFragment_to_tasksFragment"
            app:destination="@id/tasksFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/tasksFragment"
        android:name="com.example.learnlog.ui.tasks.TasksFragment"
        android:label="@string/nav_tasks">
        <action
            android:id="@+id/action_tasksFragment_to_timerFragment"
            app:destination="@id/timerFragment" />
        <argument
            android:name="taskId"
            app:argType="long"
            android:defaultValue="-1L"
            app:nullable="false" />
        <argument
            android:name="subjectFilter"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/plannerFragment"
        android:name="com.example.learnlog.ui.planner.PlannerFragment"
        android:label="@string/nav_planner" />

    <fragment
        android:id="@+id/timerFragment"
        android:name="com.example.learnlog.ui.timer.TimerFragment"
        android:label="@string/nav_timer" >
        <argument
            android:name="taskId"
            app:argType="long"
            android:defaultValue="-1L" />
        <argument
            android:name="taskTitle"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null" />
    </fragment>

    <fragment
        android:id="@+id/insightsFragment"
        android:name="com.example.learnlog.ui.insights.InsightsFragment"
        android:label="@string/nav_insights" >
        <action
            android:id="@+id/action_insights_to_tasks"
            app:destination="@id/tasksFragment" />
        <action
            android:id="@+id/action_insights_to_planner"
            app:destination="@id/plannerFragment" />
    </fragment>

    <fragment
        android:id="@+id/notesFragment"
        android:name="com.example.learnlog.ui.notes.NotesFragment"
        android:label="@string/nav_notes" >
        <action
            android:id="@+id/action_notesFragment_to_addEditNoteFragment"
            app:destination="@id/addEditNoteFragment" />
        <argument
            android:name="subjectId"
            app:argType="long"
            android:defaultValue="-1L" />
        <argument
            android:name="taskId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>
    <fragment
        android:id="@+id/addEditNoteFragment"
        android:name="com.example.learnlog.ui.notes.AddEditNoteFragment"
        android:label="Add/Edit Note" >
        <argument
            android:name="noteId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>

    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.example.learnlog.ui.analytics.AnalyticsFragment"
        android:label="@string/nav_analytics" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.learnlog.ui.settings.SettingsFragment"
        android:label="@string/nav_settings" />
</navigation>
